<div class="modal-content">
    <div class="modal-header menu-gray">
        <h5 class="modal-title" id="registrationTitle">S'inscrire</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <form action="MySpace/add" method="post">
    <div class="modal-body menu-white">

            <div class="form-group">
                <label for="nameRegistration">Ton nom</label>
                <input type="text" name="name" class="form-control"
                       id="nameRegistration"
                       placeholder="Choisis bien, tu n'as qu'une seule chance">
                <small class="text-danger"> {{ session.nameErrorAlreadyExists }} </small>
            </div>
            <div class="form-group">
                <label for="emailRegistration">E-mail</label>
                <input type="email" name="email" class="form-control"
                       id="emailRegistration" aria-describedby="emailHelp"
                       placeholder="Entre ton email">
                <small class="text-danger"> {{ session.emailErrorAlreadyExists }} </small>
            </div>
            <div class="form-group">
                <label for="passwordRegistration">Mot de passe</label>
                <input type="password" name="password" class="form-control"
                       id="passwordRegistration" placeholder="Entre ton mot passe">
                <small class="form-text text-muted">Ton mot de passe est protégé par nos soins.</small>
            </div>
    </div>
    <div class="menu-white">
    <div class="modal-footer">
        <button type="button" class="btn btn-change-login" data-toggle="modal"
                data-target="#login" id="buttonRegistration2"
                data-dismiss="modal">Clique ici pour te connecter !
        </button>
        <button type="sumbit" class="btn btn-login-modal">S'inscrire</button>
    </div>
    </div>
        </form>


</div>
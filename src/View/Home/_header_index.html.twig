<header class="header-index">

    <div class="container-fluid">
        <div class="row">

            <div class="col-4">
                <button type="button" class="btn btn-burger" data-toggle="modal" data-target="#myModal">
                    &#9776;
                </button>
            </div>


            <div class="modal left" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header menu-gray">
                            <h5 class="modal-title p-1" id="myModalLabel">Recherche par langage </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>

                        <div class="modal-body modal-nav menu-white">
                            <nav id="" class="display-block-nav">

                                <div class="sidebar-sticky">
                                    <ul class="nav flex-column">
                                        <div class="accordion accordion-nav" id="accordionExample">
                                            <li class="nav-item text-nav-langage m-3">
                                                <i class="fa fa-globe" aria-hidden="true"></i>
                                                Langages

                                            </li>

                                            <ul>
                                                <a href="/"> <div class="menu-point d-flex justify-content-start align-items-center"> <li> Tous les langages </li> </div></a>
                                                <hr>
                                                <div class="d-flex flex-column">
                                                {% for language in languages%}
                                                    <a href="/language/language/{{ language.id }}">
                                                    <div class="menu-point d-flex justify-content-start align-items-center">
                                                    <i class="{{ language.icon }} m-1 "> </i>

                                                         <li>{{ language.name }}</li>

                                                    </div></a>
                                                {% endfor %}
                                                </div>
                                            </ul>
                                        </div>
                                        <li class="nav-item text-nav menu-point m-3">
                                            <a class="nav-link" data-toggle="modal" data-target="#registration">
                                                <i class="fa fa-sign-in" aria-hidden="true"></i>
                                                Inscrivez-vous
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end navbar modal -->
            <div class="col-4 d-flex justify-content-center align-items-center">
                    <a href="/" class="animated-logo"></a>
            </div>
            <div class="col-4 align-items-center header-icons">


                <div class="search-desktop">
                    <form action="/" method="post" class="d-flex">
                        <label for="cheat-search"></label>
                        <input type="search" class="search-bar" id="cheat-search" name="cheat-search" placeholder="Rechercher">
                        <button class="btn button-loupe"><i class="fas fa-search"></i></button>
                    </form>
                </div>






                <div class="d-flex">
                    <div class="nav-icons">
                        <div class="btn">
                            <a href="/" class="home-icon"> <i class="fas fa-home"></i></a>
                        </div>
                    </div>
                    <div class="nav-icons">
                        {% if (session.user) %}
                            <div class="btn" id="UserAndLogoutDropDown" data-toggle="dropdown">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="dropdown-menu" aria-labelledby="UserAndLogoutDropDown">
                                                       <a class="dropdown-item" href="/MySpace/main/{{ session.user.id }}">Mon Compte</a>
                                <a class="dropdown-item" href="/MySpace/logout/'">Se d√©connecter</a>
                            </div>
                        {% else %}
                            <div class="btn" data-toggle="modal" data-target="#login">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="loginTitle"
                                 aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    {% include '/Home/_login.html.twig'%}

                                </div>
                            </div>

                            <div class="modal fade" id="registration" tabindex="-1" role="dialog"
                                 aria-labelledby="registrationTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">

                                {% include '/Home/_register.html.twig' %}

                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>






</header>
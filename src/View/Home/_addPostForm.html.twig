<!-- Button trigger modal -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col text-center">
            <button type="button" class="btn btn-add" data-toggle="modal" data-target="#newPost">
                <i class="fas fa-plus"></i> Créer une fiche
            </button>
        </div>
    </div>
</div>

<div class="modal fade" id="newPost" tabindex="-1" role="dialog" aria-labelledby="createPostTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header menu-gray">
                <h5 class="modal-title"> Créer une fiche</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body menu-white">
                <form method="post" class="newPostForm">
                    <div class="form-group mw-100">
                        <label for="newPostTitle">Titre</label>
                        <input type="text" class="form-control" id="newPostTitle" name="newPostTitle"
                               placeholder="Titre" required>
                    </div>
                    <div class="form-group mw-100">
                        <label for="newPostLanguage">Langage</label>
                        <select class="custom-select my-1 mr-sm-2" id="newPostLanguage" name="newPostLanguage" required>
                            <option value="">Sélectionnez une langue</option>
                            {% for language in languages %}
                                <option value="{{ language.id }}">{{ language.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group mw-100">
                        <label for="newPostContent"></label>
                        <textarea class="form-control" id="newPostContent" name="newPostContent" rows="10"
                                  placeholder="Tu peux écrire ici..." required></textarea>
                    </div>
                    <a class="blacklink" href="https://michelf.ca/projects/php-markdown/concepts/" target="_blank">Comment mettre en forme
                        mon post (liens, gras, liste,...)</a>
                    <div class="form-group my-4 mw-100">
                        <button type="submit" class="btn btn-add btn-add-inside-modal">Poster</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>